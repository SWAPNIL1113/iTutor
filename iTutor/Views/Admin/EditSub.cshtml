@model iTutor.Models.SubList

@{
    ViewBag.Title = "EditSub";
    Layout = "~/Views/Admin.cshtml";
}
<div class="wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Edit Subject Entry</h3>
                        </div>

                        @using (Html.BeginForm("UpdateSubData", "Admin", FormMethod.Post, new { @class = "form" }))
                        {
                            @Html.AntiForgeryToken()

                    <div class="card-body">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.sub, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.sub, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sub, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Update" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                        }

                        <div>
                            @Html.ActionLink("Back to List", "viewsubentry")
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </section>

</div>